{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "baseUrl": ".",
    "types": ["node"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "paths": {
      "#root/*.ts": ["./*.ts"],
      "#root/*.tsx": ["./*.tsx"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["node_modules"]
}
